# Database
# For Neon PostgreSQL (local dev & production)
# IMPORTANT: Use POOLED connection for best performance
# Get from: https://console.neon.tech/ → "Pooled connection" tab
DATABASE_URL="postgresql://username:password@host-pooler.region.neon.tech/database?sslmode=require&pgbouncer=true"

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
# IMPORTANT: Use a strong, random 32+ character string
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters"

# For local development
NEXTAUTH_URL="http://localhost:3000"

# For production - update this to your custom domain after deployment
# NEXTAUTH_URL="https://yourdomain.com"

# Admin Credentials (REQUIRED for seeding)
# IMPORTANT: Use a strong password (min 12 characters)
# - Mix uppercase, lowercase, numbers, and symbols
# - Avoid common words or patterns
# - Example: "MyBl0g$ecure!P@ssw0rd2026"
ADMIN_EMAIL="your-email@example.com"
ADMIN_PASSWORD="your-secure-password-here"

# Cloudinary Image Storage
# Get from: https://console.cloudinary.com/
# 1. Sign up for free account at cloudinary.com
# 2. Copy your Cloud Name from dashboard
# 3. Copy API Key and API Secret from "Product Environment Credentials"
# 4. Create unsigned upload preset named "blog-images" in Settings → Upload
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="blog-images"
